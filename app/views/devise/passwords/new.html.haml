= heading_section :h2, "Forgot your password?"
.authform.authform-container
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = validation_errors_notifications(resource)
    .form-group
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, class: "form-control input-lg"
    .form-actions
      = f.submit "Send me reset password instructions", class: "btn btn-default"
  %br/
  = render "devise/shared/links"
