= heading_section :h2, "Settings"
= render layout: "side_bar" do
  %p This information is visible to all Threadhabits users in your profile page.
  = validation_errors_notifications current_person
  = form_for current_person, url: settings_path, method: :put do |f|
    .form-group
      = f.label :first_name
      = f.text_field :first_name, class: "form-control input-lg"
    .form-group
      = f.label :last_name
      = f.text_field :last_name, class: "form-control input-lg"
    -# .form-group
      = f.label :location
      = f.text_field :location, class: "form-control input-lg"
    .form-group
      = f.label :about_you
      = f.text_area :about_you, class: "form-control input-lg"
    .form-group
      = f.label :phone_number
      = f.text_field :phone_number, class: "form-control input-lg"
    .form-actions
      = f.submit "Save Information", class: "btn btn-primary"
