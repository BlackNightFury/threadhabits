.profile
  .container
    .cover-img.user-profile-header{style: "background: url('#{@person.cover_image.url(:medium)}');"}
    .top-content.user-profile-header
      .row
        .col-md-2.col-sm-2.col-xs-12
        .col-md-2.col-sm-2.col-xs-12
          = person_avatar @person, inner_class: "alphabetical-avatar-user-profile", outer_class: "image-profile thumbnail image-medium-profile"
        .col-md-7.col-sm-7.col-xs-12.profile-name-text
          .profile-text
            %h1= @person.full_name
            %ul.list-inline.contact
              %li= @person.tagged_username
              %li
                %span.location
                  %i.fa.fa-map-marker
                = @person.location
          .profile-desc
            .row
              .col-md-6.col-lg-6
                %p.desc.profile-description
                  = @person.about_you
              .col-md-6.col-lg-6
                %ul.list-inline.additional-details.profile-stats
                  %li
                    %span.value
                      = @person.listings.count
                    %br/
                    %span.label
                      Items
                  %li
                    %span.value
                      = @person.try(:sales) || 0
                    %br/
                    %span.label
                      Sales
                  %li.followers
                    %span.value
                      = @person.followers.count
                    %br/
                    %span.label
                      - if current_person and @person.is_current_person?(current_person)
                        = link_to "Followers", follow_index_path
                      - else
                        Followers
                  %li.followings
                    %span.value
                      = @person.followings.count
                    %br/
                    %span.label
                      - if current_person and @person.is_current_person?(current_person)
                        = link_to "Following", follow_index_path
                      - else
                        Following
                  -# %li.feedback
                    %span.value
                      5/5
                    %br/
                    %span.label
                      + Feedback
    .bottom-content
      .row
        .col-md-6.col-sm-6.col-xs-6
          %ul.list-inline.listing-tabs
            %li.active{:role => "presentation"}
              %a{"aria-controls" => "items", "data-toggle" => "tab", :href => "#items", :role => "tab"} Items:
            -# %li{:role => "presentation"}
              %a{"aria-controls" => "instgram", "data-toggle" => "tab", :href => "#instgram", :role => "tab"} Instagram:
        .col-md-6.col-sm-6.col-xs-6
          - if @person.social_links.any?
            %ul.list-inline.list-right.socal-icons-list
              %li= link_to image_tag('fb.png',:size => "35x32"), @person.facebook_profile, class: "social-icons-profile", target: "_blank" if @person.facebook_profile.present?
              %li= link_to image_tag('insta.png',:size => "42x38"), @person.instagram_profile, class: "social-icons-profile", target: "_blank" if @person.instagram_profile.present?
              -# %li
                = link_to "", "#", class: "social-icons-snapchat"
              %li= link_to image_tag('twitter.png',:size => "32x28"), @person.instagram_profile, class: "social-icons-profile", target: "_blank" if @person.instagram_profile.present?
              -# %li
                = link_to "", "#", class: "social-icons-pinterest"
      .row
        .col-md-9.col-sm-9.col-xs-12
          .tab-content
            #items.tab-pane.fade.in.active{:role => "tabpanel"}
              - if @listings.present?
                .listings
                  .row
                    = render partial: "listings/listing", collection: @listings
                .items-pagination
                  = will_paginate @listings, renderer: BootstrapPagination::Rails
              - else
                .alert.alert-success
                  There are no listings
            -# #instgram.tab-pane{:role => "tabpanel"}
        .col-md-3.col-sm-3.col-xs-12
          = render  partial: "side_section"
  %br/
  .message-box
