.col-md-3.col-sm-3.col-xs-6.listing-column
  .listing-thumbnail.thumbnail
    %a{href: detail_listings_path(listing.slug)}
      = image_tag listing.display_image.url(:medium)
    .caption
      %p.created= time_ago_in_words((listing.updated_at || listing.created_at))
      .desc
        %h4{style: "width: 100%; text-overflow: ellipsis; overflow: hidden; white-space: nowrap; margin-bottom: 0;"}
          = listing.company.try(:name)
        %small{style: "color: #777777; margin-bottom: 10px;"}= listing.size.try(:name)
        %p.content
          = listing.name
      %p.price= number_to_currency listing.price
