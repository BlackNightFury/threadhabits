-# Application footer
:javascript
  $(document).on("turbolinks:load", function() { #{yield :javascript} });

%footer
  .row
    .col-md-8.col-sm-8.col-xs-8
      %ul.list-inline.side-left-section
        %li
          %a{href: "#"}
            &copy;
            = Date.today.year
            = "Threadhabits"
        %li
          %a{href: "#"}
            Terms of use
        %li
          %a{href: "#"}
            Privacy Policy
    .col-md-4.col-sm-4.col-xs-4
      %ul.list-inline.side-right-section
        %li
          %a{href: "#"}
            %i.fa.fa-facebook
        %li
          %a{href: "#"}
            %i.fa.fa-instagram
        %li
          %a{href: "#"}
            %i.fa.fa-pinterest-p
        %li
          %a{href: "#"}
            %i.fa.fa-twitter
